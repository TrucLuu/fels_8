<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
<% @users.each do |user| %>
<li>
<%= link_to image_tag(user.avatar, alt: user.name), user %>
<%= link_to user.name, user %>
<% if signed_in? %>
	<% if current_user.admin? %> 
		| <%= link_to "delete", user, method: :delete, confirm: "You sure?" %>
	<% end %>	
<% end %>
</li>
<% end %>
</ul>

<%= will_paginate %>