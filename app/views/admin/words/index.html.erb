<h1>Listing words</h1>
<br>
Category: <%= select_tag 'Words_Category', options_from_collection_for_select(Category.all, :id, :name, select: params[:category]), onchange: 'jsChangeLocation()' %>
<table>
  <thead>
    <tr>
      <th width="300">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.name %></td>
        <td><%= link_to 'Show', [:admin,word] %></td>
        <td><%= link_to 'Edit', edit_admin_word_path(word) %></td>
        <td><%= link_to 'Destroy', [:admin,word], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @words %>
<br>

<%= link_to 'New Word', new_admin_word_path %>

<script type="text/javascript">
    function jsChangeLocation(){
        window.location = '<%= "#{admin_words_path}?category_id=" %>' + $("#Words_Category").val()
    }
</script>