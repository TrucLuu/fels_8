<h1>Listing categories</h1>
<%= will_paginate @categories %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Thumbnail</th>
      <th>Word limit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= image_tag category.thumbnail,width:80,height:40 %></td>
        <td><%= admin_category.word_limit %></td>
        <td><%= link_to 'Show', [:admin, category] %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @categories %>
<br>

<%= link_to 'New Category', new_admin_category_path %>
