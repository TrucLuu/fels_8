<%= form_for(@category) do |f| %>
  <%= render 'shared/error_messages',object: f.object %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :word_limit %><br>
    <%= f.number_field :word_limit %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
